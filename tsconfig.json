{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "checkJs": true,
    "allowJs": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@/api/*": ["./src/api/*"],
      "@/models/*": ["./src/api/models/*"],
      "@/helpers/*": ["./src/api/helpers/*"],
      "@/controllers/*": ["./src/api/controllers/*"],
      "@/repositories/*": ["./src/api/helpers/repositories/*"],
      "@/routes/*": ["./src/api/routes/*"],
      "@/services/*": ["./src/api/services/*"],
      "@/schemas/*": ["./src/api/helpers/middlewares/schemas/*"],
      "@/config/*": ["./src/api/helpers/config/*"],
      "@/dto/*": ["./src/api/helpers/dto/*"],
      "@/enums/*": ["./src/api/helpers/enums/*"],
      "@/interface/*": ["./src/api/helpers/interface/*"],
      "@/lib/*": ["./src/api/helpers/lib/*"],
      "@/middlewares/*": ["./src/api/helpers/middlewares/*"],
      "@/utils/*": ["./src/api/helpers/utils/*"],
      "@/__test__/*": ["./src/__tests__/*"],
      "@/types/*": ["./src/api/types/*"],
      "@/queues/*": ["./src/api/helpers/queues/*"],
      "@/templates/*": ["./src/api/helpers/templates/*"]
    }
  },
  "include": ["src/**/*.ts", "src/__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
